{
  "data": {
    "amqp": {
      "connStr": "amqp://guest:guest@localhost:5672",
      "exitOnLostConnection": true,
      "connectionRetry": {
        "sleep": 4,
        "maxTries": 2
      }
    }
  },
  "presentation": {
    "web": {
      "port": 3000
    }
  },
  "integration": {
    "amqp": {
      "subs": {
        "seller": {
          "topic": "q-sellers",
          "consumer": "c-seller"
        },
        "merchant": {
          "topic": "q-merchants",
          "consumer": "c-merchant"
        }
      },
      "pubs": {
        "crm-account": {
          "topic": "q-accounts"
        }
      }
    },
    "rest": {
      "merchantAccounts": {
        "baseUrl": "http://localhost:4000/merchant-accounts",
        "timeOut": 3,
        "rejectUnauthorized": false
      },
      "merchants": {
        "baseUrl": "http://localhost:4000/merchants",
        "timeOut": 3,
        "rejectUnauthorized": false
      },
      "affiliations": {
        "baseUrl": "http://localhost:4000/affiliations",
        "timeout": 3,
        "rejectUnauthorized": false
      }
    }
  }
}