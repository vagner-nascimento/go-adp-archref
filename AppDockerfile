FROM golang:alpine

# Install bash to use on docker compose commands
RUN apk update && apk add bash

# Set golang env variables
ENV GO111MODULE=on \
    CGO_ENABLED=0 \
    GOOS=linux \
    GOARCH=amd64 \
    GO_ENV=docker

WORKDIR /build

COPY . .

RUN go mod download
RUN go build -o main .

# Move app startup script to its properly folder
RUN mkdir /scripts
RUN mv ./docker/wait-for-it.sh /scripts
RUN mkdir /app

# Copy binary (main) from build to app folder
RUN cp main /app

# Copy config files into the app folder
RUN cp -rf config/ /app
RUN rm -rf /build

WORKDIR /app